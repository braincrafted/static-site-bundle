<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bc_static_site.writer.filesystem.class">Bc\Bundle\StaticSiteBundle\Writer\FilesystemWriter</parameter>
    </parameters>

    <services>
        <service id="bc_static_site.writer.filesystem" class="%bc_static_site.writer.filesystem.class%">
            <argument type="service" id="filesystem" />
            <argument>%bc_static_site.build_directory%</argument>
            <argument>%bc_static_site.index_name%</argument>
        </service>
    </services>

</container>
