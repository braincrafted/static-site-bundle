<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cocur_buildd.writer.filesystem.class">Cocur\Bundle\BuildBundle\Writer\FilesystemWriter</parameter>
    </parameters>

    <services>
        <service id="cocur_buildd.writer.filesystem" class="%cocur_buildd.writer.filesystem.class%">
            <argument type="service" id="filesystem" />
            <argument>%cocur_buildd.build_directory%</argument>
            <argument>%cocur_buildd.index_name%</argument>
        </service>
    </services>

</container>
