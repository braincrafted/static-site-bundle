<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="bc_static_site.renderer.controller.class">Bc\Bundle\StaticSiteBundle\Renderer\ControllerRenderer</parameter>

        <parameter key="bc_static_site.renderer.route.class">Bc\Bundle\StaticSiteBundle\Renderer\RouteRenderer</parameter>

        <parameter key="bc_static_site.renderer.routes.class">Bc\Bundle\StaticSiteBundle\Renderer\RoutesRenderer</parameter>

    </parameters>

    <services>

        <service id="bc_static_site.renderer.controller" class="%bc_static_site.renderer.controller.class%">
            <argument type="service" id="bc_static_site.renderer.route" />
            <argument type="service" id="controller_name_converter" />
            <argument type="service" id="router" />
        </service>

        <service id="bc_static_site.renderer.route" class="%bc_static_site.renderer.route.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="router" />
            <argument>%bc_static_site.build_directory%</argument>
        </service>

        <service id="bc_static_site.renderer.routes" class="%bc_static_site.renderer.routes.class%">
            <argument type="service" id="bc_static_site.renderer.route" />
            <argument type="service" id="router" />
        </service>

    </services>

</container>
