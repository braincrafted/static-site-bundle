<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="braincrafted_static_site.renderer.controller.class">Braincrafted\Bundle\StaticSiteBundle\Renderer\ControllerRenderer</parameter>

        <parameter key="braincrafted_static_site.renderer.route.class">Braincrafted\Bundle\StaticSiteBundle\Renderer\RouteRenderer</parameter>

        <parameter key="braincrafted_static_site.renderer.routes.class">Braincrafted\Bundle\StaticSiteBundle\Renderer\RoutesRenderer</parameter>

    </parameters>

    <services>

        <service id="braincrafted_static_site.renderer.controller" class="%braincrafted_static_site.renderer.controller.class%">
            <argument type="service" id="braincrafted_static_site.renderer.route" />
            <argument type="service" id="controller_name_converter" />
            <argument type="service" id="router" />
        </service>

        <service id="braincrafted_static_site.renderer.route" class="%braincrafted_static_site.renderer.route.class%">
            <argument type="service" id="kernel" />
            <argument type="service" id="router" />
            <argument type="service" id="braincrafted_static_site.writer.filesystem" />
            <argument>%braincrafted_static_site.base_url%</argument>
        </service>

        <service id="braincrafted_static_site.renderer.routes" class="%braincrafted_static_site.renderer.routes.class%">
            <argument type="service" id="braincrafted_static_site.renderer.route" />
            <argument type="service" id="router" />
        </service>

    </services>

</container>
