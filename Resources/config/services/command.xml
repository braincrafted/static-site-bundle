<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="braincrafted_cocur.command.render_controller.class">Braincrafted\Bundle\CocurBundle\Command\RenderControllerCommand</parameter>

        <parameter key="braincrafted_cocur.command.render_route.class">Braincrafted\Bundle\CocurBundle\Command\RenderRouteCommand</parameter>

        <parameter key="braincrafted_cocur.command.render_routes.class">Braincrafted\Bundle\CocurBundle\Command\RenderRoutesCommand</parameter>

        <parameter key="braincrafted_cocur.command.build.class">Braincrafted\Bundle\CocurBundle\Command\BuildCommand</parameter>

        <parameter key="braincrafted_cocur.command.clean.class">Braincrafted\Bundle\CocurBundle\Command\CleanCommand</parameter>
    </parameters>

    <services>

        <service id="braincrafted_cocur.command.render_controller" class="%braincrafted_cocur.command.render_controller.class%">
            <argument type="service" id="braincrafted_cocur.renderer.controller" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_cocur.command.render_route" class="%braincrafted_cocur.command.render_route.class%">
            <argument type="service" id="braincrafted_cocur.renderer.route" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_cocur.command.render_routes" class="%braincrafted_cocur.command.render_routes.class%">
            <argument type="service" id="braincrafted_cocur.renderer.routes" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_cocur.command.build" class="%braincrafted_cocur.command.build.class%">
            <argument type="service" id="braincrafted_cocur.renderer.routes" />
            <argument type="collection">
                <argument key="base_url">%braincrafted_cocur.base_url%</argument>
                <argument key="build_directory">%braincrafted_cocur.build_directory%</argument>
                <argument key="enable_assetic">%braincrafted_cocur.enable_assetic%</argument>
            </argument>
            <tag name="console.command" />
        </service>

        <service id="braincrafted_cocur.command.clean" class="%braincrafted_cocur.command.clean.class%">
            <argument type="service" id="braincrafted_cocur.filesystem" />
            <argument>%braincrafted_cocur.build_directory%</argument>
            <tag name="console.command" />
        </service>



    </services>

</container>
