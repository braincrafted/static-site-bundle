<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bc_static_site.command.render_controller.class">Bc\Bundle\StaticSiteBundle\Command\RenderControllerCommand</parameter>

        <parameter key="bc_static_site.command.render_route.class">Bc\Bundle\StaticSiteBundle\Command\RenderRouteCommand</parameter>

        <parameter key="bc_static_site.command.render_routes.class">Bc\Bundle\StaticSiteBundle\Command\RenderRoutesCommand</parameter>
    </parameters>

    <services>

        <service id="bc_static_site.command.render_controller" class="%bc_static_site.command.render_controller.class%">
            <argument type="service" id="bc_static_site.renderer.controller" />
            <tag name="console.command" />
        </service>

        <service id="bc_static_site.command.render_route" class="%bc_static_site.command.render_route.class%">
            <argument type="service" id="bc_static_site.renderer.route" />
            <tag name="console.command" />
        </service>

        <service id="bc_static_site.command.render_routes" class="%bc_static_site.command.render_routes.class%">
            <argument type="service" id="bc_static_site.renderer.routes" />
            <tag name="console.command" />
        </service>

    </services>

</container>
