<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="braincrafted_static_site.command.render_controller.class">Braincrafted\Bundle\StaticSiteBundle\Command\RenderControllerCommand</parameter>

        <parameter key="braincrafted_static_site.command.render_route.class">Braincrafted\Bundle\StaticSiteBundle\Command\RenderRouteCommand</parameter>

        <parameter key="braincrafted_static_site.command.render_routes.class">Braincrafted\Bundle\StaticSiteBundle\Command\RenderRoutesCommand</parameter>

        <parameter key="braincrafted_static_site.command.build.class">Braincrafted\Bundle\StaticSiteBundle\Command\BuildCommand</parameter>

        <parameter key="braincrafted_static_site.command.clean.class">Braincrafted\Bundle\StaticSiteBundle\Command\CleanCommand</parameter>
    </parameters>

    <services>

        <service id="braincrafted_static_site.command.render_controller" class="%braincrafted_static_site.command.render_controller.class%">
            <argument type="service" id="braincrafted_static_site.renderer.controller" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_static_site.command.render_route" class="%braincrafted_static_site.command.render_route.class%">
            <argument type="service" id="braincrafted_static_site.renderer.route" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_static_site.command.render_routes" class="%braincrafted_static_site.command.render_routes.class%">
            <argument type="service" id="braincrafted_static_site.renderer.routes" />
            <tag name="console.command" />
        </service>

        <service id="braincrafted_static_site.command.build" class="%braincrafted_static_site.command.build.class%">
            <argument type="service" id="braincrafted_static_site.renderer.routes" />
            <argument>%braincrafted_static_site.build_directory%</argument>
            <tag name="console.command" />
        </service>

        <service id="braincrafted_static_site.command.clean" class="%braincrafted_static_site.command.clean.class%">
            <argument type="service" id="braincrafted_static_site.filesystem" />
            <argument>%braincrafted_static_site.build_directory%</argument>
            <tag name="console.command" />
        </service>



    </services>

</container>
