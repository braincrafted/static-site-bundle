<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cocur_build.command.render_controller.class">Cocur\Bundle\BuildBundle\Command\RenderControllerCommand</parameter>

        <parameter key="cocur_build.command.render_route.class">Cocur\Bundle\BuildBundle\Command\RenderRouteCommand</parameter>

        <parameter key="cocur_build.command.render_routes.class">Cocur\Bundle\BuildBundle\Command\RenderRoutesCommand</parameter>

        <parameter key="cocur_build.command.build.class">Cocur\Bundle\BuildBundle\Command\BuildCommand</parameter>

        <parameter key="cocur_build.command.clean.class">Cocur\Bundle\BuildBundle\Command\CleanCommand</parameter>
    </parameters>

    <services>

        <service id="cocur_build.command.render_controller" class="%cocur_build.command.render_controller.class%">
            <argument type="service" id="cocur_build.renderer.controller" />
            <tag name="console.command" />
        </service>

        <service id="cocur_build.command.render_route" class="%cocur_build.command.render_route.class%">
            <argument type="service" id="cocur_build.renderer.route" />
            <tag name="console.command" />
        </service>

        <service id="cocur_build.command.render_routes" class="%cocur_build.command.render_routes.class%">
            <argument type="service" id="cocur_build.renderer.routes" />
            <tag name="console.command" />
        </service>

        <service id="cocur_build.command.build" class="%cocur_build.command.build.class%">
            <argument type="service" id="cocur_build.renderer.routes" />
            <argument type="collection">
                <argument key="base_url">%cocur_build.base_url%</argument>
                <argument key="build_directory">%cocur_build.build_directory%</argument>
                <argument key="enable_assetic">%cocur_build.enable_assetic%</argument>
            </argument>
            <tag name="console.command" />
        </service>

        <service id="cocur_build.command.clean" class="%cocur_build.command.clean.class%">
            <argument type="service" id="cocur_build.filesystem" />
            <argument>%cocur_build.build_directory%</argument>
            <tag name="console.command" />
        </service>



    </services>

</container>
