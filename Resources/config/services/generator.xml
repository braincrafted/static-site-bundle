<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="braincrafted_cocur.generator.collection.class">Braincrafted\Bundle\CocurBundle\Generator\GeneratorCollection</parameter>
        <parameter key="braincrafted_cocur.file_generator.class">Braincrafted\Bundle\CocurBundle\Generator\FileGenerator</parameter>
        <parameter key="braincrafted_cocur.json_generator.class">Braincrafted\Bundle\CocurBundle\Generator\JsonGenerator</parameter>
        <parameter key="braincrafted_cocur.csv_generator.class">Braincrafted\Bundle\CocurBundle\Generator\CSVGenerator</parameter>
        <parameter key="braincrafted_cocur.directory_generator.class">Braincrafted\Bundle\CocurBundle\Generator\DirectoryGenerator</parameter>
        <parameter key="braincrafted_cocur.yaml_generator.class">Braincrafted\Bundle\CocurBundle\Generator\YamlGenerator</parameter>
        <parameter key="braincrafted_cocur.front_matter_generator.class">Braincrafted\Bundle\CocurBundle\Generator\FrontMatterGenerator</parameter>

    </parameters>

    <services>

        <service id="braincrafted_cocur.generator.collection" class="%braincrafted_cocur.generator.collection.class%" />

        <service id="braincrafted_cocur.file_generator" class="%braincrafted_cocur.file_generator.class%" abstract="true">
            <argument />
        </service>

        <service id="braincrafted_cocur.json_generator" class="%braincrafted_cocur.json_generator.class%" abstract="true">
            <argument />
        </service>

        <service id="braincrafted_cocur.csv_generator" class="%braincrafted_cocur.csv_generator.class%" abstract="true">
            <argument />
        </service>

        <service id="braincrafted_cocur.directory_generator" class="%braincrafted_cocur.directory_generator.class%" abstract="true">
            <argument />
        </service>

        <service id="braincrafted_cocur.yaml_generator" class="%braincrafted_cocur.yaml_generator.class%" abstract="true">
            <argument />
        </service>

        <service id="braincrafted_cocur.front_matter_generator" class="%braincrafted_cocur.front_matter_generator.class%" abstract="true">
            <argument />
        </service>

    </services>

</container>
