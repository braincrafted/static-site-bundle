<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="braincrafted_static_site.generator.collection.class">Braincrafted\Bundle\StaticSiteBundle\Generator\GeneratorCollection</parameter>
        <parameter key="braincrafted_static_site.file_generator.class">Braincrafted\Bundle\StaticSiteBundle\Generator\FileGenerator</parameter>
        <parameter key="braincrafted_static_site.json_generator.class">Braincrafted\Bundle\StaticSiteBundle\Generator\JsonGenerator</parameter>

    </parameters>

    <services>

        <service id="braincrafted_static_site.generator.collection" class="%braincrafted_static_site.generator.collection.class%" />
        <service id="braincrafted_static_site.file_generator" class="%braincrafted_static_site.file_generator.class%" abstract="true">
            <argument />
        </service>
        <service id="braincrafted_static_site.json_generator" class="%braincrafted_static_site.json_generator.class%" abstract="true">
            <argument />
        </service>

    </services>

</container>
